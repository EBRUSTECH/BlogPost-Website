@model BlogTask.Models.ViewModels.AllBlogViewModel
@{
    ViewData["Title"] = "all blog posts";
}

    <div class="content-wrapper">
    <div class="page-header flex-wrap">

        <h5 class="mb-0">
            All Blog Posts
        </h5>

    </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card mx-auto">
                <div class="card">
                    <div class="card-body">
                        
                        <div class="table-responsive">

                        @if (Model != null)
                        {

                            <table class="table text-center">
                                <thead>
                                    <tr>

                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Blog text</th>

                                        <th>Action</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach(var blogPost in Model.Blogs)
                                    {
                                        <tr>

                                            <td>@blogPost.Title</td>
                                            <td>@blogPost.Category.Name</td>
                                            <td>@Html.Raw(blogPost.Text.Length > 8 ? blogPost.Text.Substring(0, 8) + "..." : blogPost.Text)</td>          
                                            <td>
                                                <a>Edit</a>
                                            </td>

                                            <td>
                                                <a>Delete</a>
                                            </td>

                                        </tr>
                                    }
                                
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No Blog Post Found!</p>
                        }

                        </div>
                    </div>
                </div>
            </div>
         
        </div>
    </div>
    