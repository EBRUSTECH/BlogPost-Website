@model List<BlogTask.Models.ViewModels.AllCategoryViewModel>
@{
    ViewData["Title"] = "all Categories";
}

<div class="content-wrapper">
    <div class="page-header flex-wrap">

        <h5 class="mb-0">
            All Categories
        </h5>

    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card mx-auto">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">

                        @if(Model != null && Model.Any())
                        {
                            <table class="table text-center">
                                <thead>
                                    <tr>

                                        <th>Category Name</th>
                                        <th>Action</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var category in Model)
                                    {
                                        <tr>

                                            <td>@category.Name</td>

                                            <td>
                                                <a asp-controller="Dashboard" asp-action="EditCategory" asp-route-CategoryId="@category.CategoryId">Edit</a>
                                            </td>

                                            <td>
                                                <a asp-controller="Dashboard" asp-action="DeleteTheCategory" asp-route-CategoryId="@category.CategoryId">Delete</a>
                                            </td>

                                        </tr>

                                    }


                                </tbody>
                            </table>
                        }
                      
                        else
                        {
                            <p>No category found!</p>
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
